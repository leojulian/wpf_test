<Window x:Class="ActivationDeactivation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivationDeactivation"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ContentControl prism:RegionManager.RegionName="ContentRegion"/>
        <Button Content="Activate/Deactivate ViewA" Height="50" Width="200"
                Click="Button_Click"/>
        <Button Content="Activate/Deactivate ViewB" Height="50" Width="200" Margin="0 120 0 0 "
                Click="Button_Click_1"/>
    </Grid>
</Window>
