<Window x:Class="UsingDialogService.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:UsingDialogService"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid>
        <Button Content="Show Dialog" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100"
                Height="50" Margin="10 10 0 0" Command="{Binding ShowDialogCommand}"/>
    </Grid>
</Window>
